# gen_init_cpio input
dir /dev 0755 0 0
nod /dev/console 0600 0 0 c 5 1
nod /dev/null 0666 0 0 c 1 3
dir /dev/pts 0755 0 0
dir /bin 0755 0 0
dir /sbin 0755 0 0
dir /lib 0755 0 0
dir /etc 0755 0 0
dir /proc 0755 0 0
dir /sys 0755 0 0
dir /tmp 0755 0 0
dir /run 0755 0 0
slink /bin/sh busybox 0755 0 0
slink /bin/echo busybox 0755 0 0
slink /bin/mount busybox 0755 0 0
slink /bin/mkdir busybox 0755 0 0
slink /bin/losetup busybox 0755 0 0
slink /bin/blkid busybox 0755 0 0
file /init @skel@/init 0755 0 0
#file /bin/busybox /bin/busybox.static 0755 0 0

